<odoo>

     View tree definition: بنعمل شاشة List View للـ property
    <record id="property_view_tree" model="ir.ui.view">
        <!-- اسم الفيو للتمييز -->
        <field name="name">property tree</field>

        <!-- الموديل اللي الفيو تابع ليه -->
        <field name="model">property</field>

        <!-- شكل الفيو من جوه -->
        <field name="arch" type="xml">
            <tree class="header_custom" >
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="date_available"/>
                 <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="state"/>
                <field name="bedrooms"/>
                <field name="garden_orientation" />

            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <!-- اسم الفيو للتمييز -->
        <field name="name">property form</field>

        <!-- الموديل اللي الفيو تابع ليه -->
        <field name="model">property</field>

        <!-- شكل الفيو من جوه -->
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"
                        invisible="state == 'draft' "/>
                        <button name="action_pending" type="object" class="btn-secondary" string=" Pending"
                        invisible="state != 'draft' "/>
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                         invisible="state != 'pending'"/>

                       <field name="state" widget="statusbar" />

                    </header>




                    <div class="oe_title">
                        <label for="name"/>
                        <h1> <field name="name"/></h1>

                    </div>
                    <group>
                        <group string="General info.">econdary

                            <field name="date_available"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="postcode"/>
                            <field name="garden"/>
                             <field name="facades" />
                             <field name="garage" />


                        </group>
                        <group string="Additional info.">
                            <field name="bedrooms"/>
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                              <field name="state"/>
                            <field name="garden_orientation"/>
                            <field name="garden_orientation" />

                            <field name="tag_ids" widget="many2many_tags"/>
<!--                             <field name="description" />-->
                             <field name="living_area" />
                        </group>
                    </group>
                     <gourp>
                         <field name="description" required="1"/>
                    </gourp>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                     <field name="description"/>
                                    <field name="area"/>

                                </tree>
                            </field>

                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <!-- Action: بنعمل action يفتح شاشة الموديل -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property action</field>
        <field name="res_model">property</field>
<!--        <field name="view_mode">tree,form</field>-->
    </record>

    <!-- Menu item: بنعمل Menu تظهر في Odoo وتفتح الـ action -->
    <menuitem
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    />

</odoo>
