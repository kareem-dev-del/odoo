<odoo>

     View tree definition: بنعمل شاشة List View للـ property
    <record id="property_view_tree" model="ir.ui.view">
        <!-- اسم الفيو للتمييز -->
        <field name="name">property tree</field>

        <!-- الموديل اللي الفيو تابع ليه -->
        <field name="model">property</field>

        <!-- شكل الفيو من جوه -->
        <field name="arch" type="xml">
            <tree multi_edit="1" create="1" edit="1" delete="0">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_available"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="bedrooms"/>
                <field name="garden_orientation" />
                <field name="expected_price" />
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <!-- اسم الفيو للتمييز -->
        <field name="name">property form</field>

        <!-- الموديل اللي الفيو تابع ليه -->
        <field name="model">property</field>

        <!-- شكل الفيو من جوه -->
        <field name="arch" type="xml">
            <form multi_edit="1" create="1" edit="0" delete="0">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1> <field name="name"/></h1>



                    </div>
                    <group>
                        <group string="General info.">

                            <field name="date_available"/>
                            <field name="selling_price"/>
                            <field name="postcode"/>
                            <field name="garden"/>
                             <field name="facades" />
                             <field name="garage" />
                             <field name="bedrooms" />

                        </group>
                        <group string="Additional info.">
                            <field name="bedrooms"/>
                            <field name="garden_orientation"/>
                            <field name="garden_orientation" />
                            <field name="expected_price"/>
<!--                             <field name="description" />-->
                             <field name="living_area" />
                        </group>
                    </group>
                     <gourp>
                         <field name="description" required="1"/>
                    </gourp>



                </sheet>




<!--                    <field name="name"/>-->
<!--                    <field name="date_available"/>-->
<!--                    <field name="selling_price"/>-->
<!--                    <field name="garden"/>-->
<!--                    <field name="bedrooms"/>-->
<!--                    <field name="garden_orientation" optional="1"/>-->
<!--                    <field name="expected_price" optional="1"/>-->
            </form>
        </field>
    </record>

